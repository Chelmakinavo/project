<VBox alignment="CENTER" prefHeight="650.0" prefWidth="1300.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="650.0" prefWidth="1300.0">
      <children>
         <ImageView fitHeight="720.0" fitWidth="1300.0">
            <image>
               <Image url="@Wall.png" />
            </image>
         </ImageView>
          <Button id="Single" graphicTextGap="0.0" layoutX="567.0" layoutY="249.0" onMouseClicked="#onSingleButtonClick" prefHeight="38.0" prefWidth="190.0" text="Одиночная игра">
            <font>
               <Font name="System Italic" size="17.0" />
            </font>
         </Button>
      
          <Label fx:id="Name" layoutX="400.0" layoutY="166.0" text="Название Игры" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font name="MS Gothic" size="42.0" />
            </font>
         </Label>
          <Button id="Study" layoutX="567.0" layoutY="419.0" mnemonicParsing="false" onMouseClicked="#OnStudyButtonClick" prefHeight="38.0" prefWidth="190.0" text="Обучение">
              <font>
                  <Font name="System Italic" size="17.0" />
              </font>
          </Button>
          <Button id="Cooperate" layoutX="567.0" layoutY="333.0" mnemonicParsing="false" onMouseClicked="#OnCooperateButtonClick" prefHeight="38.0" prefWidth="190.0" text="Кооперативная игра">
              <font>
                  <Font name="System Italic" size="17.0" />
              </font>
          </Button>
         <ImageView fitHeight="432.0" fitWidth="448.0" layoutX="56.0" layoutY="317.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@b-removebg-preview.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="393.0" fitWidth="373.0" layoutX="875.0" layoutY="323.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@c-removebg-preview.png" />
            </image>
         </ImageView>
      </children>
   </AnchorPane>

</VBox>
